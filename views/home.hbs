
{{> header}}
{{#each course}}
  <div class="row">
    <div class="col s12 m7">
      <div class="card">
        <h2></h2>
        <div class="card-image">
          <img src="{{this.imageUrl}}">
          <span class="card-title">{{this.title}}</span>
        </div>
        <div class="card-content">
          <p>{{this.description}}.</p>
        </div>
        <div class="card-action">
          <a href="#">Details</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
{{> footer}}